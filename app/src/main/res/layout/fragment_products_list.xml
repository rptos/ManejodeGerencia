<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.henry.clientesnuevos.ProductsListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorBlueHeaven"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewBrowse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.8"
                android:background="@drawable/ic_background_top"
                android:padding="5dp"
                android:text="PRODUCTOS: "
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textViewToolBarSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/TvToolBarListProducts_all"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorBlueHeaven"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewBrowse1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.95"
                android:background="@drawable/ic_background_top"
                android:padding="5dp"
                android:text="PRODUCTOS: "
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textViewToolBarSearch1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/ic_background_top"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/TvToolBarListProducts_all"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewToolBarSearchCode1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.8"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="0000000"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/colorBlueHeaven"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewBrowse2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.05"
                android:background="@drawable/ic_background_top"
                android:padding="5dp"
                android:text="PRODUCTOS: "
                android:textAppearance="@style/TextAppearance.AppCompat.Button" />

            <TextView
                android:id="@+id/textViewToolBarSearch2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.2"
                android:background="@drawable/ic_background_top"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/TvToolBarListProducts_all"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewToolBarSearchCode2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/ic_background_top"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="0000000"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <TextView
                android:id="@+id/textViewToolBarSearchExt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="buscar"
                android:textAppearance="@style/TextAppearance.AppCompat" />
        </LinearLayout>

        <ListView
            android:id="@+id/listViewProductsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:src="@drawable/search"
        android:visibility="visible"
        app:backgroundTint="@color/colorBlueHeaven" />

    <ImageView
        android:id="@+id/progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        app:srcCompat="@drawable/logo_animado" />


</RelativeLayout>
